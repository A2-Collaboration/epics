# records for Active Polarized Target

# we use calc records instead of ai to do some unit conversion,
# first calc is more flexible and second ai has RVAL as long,
# so floats are a bit difficult to feed in....

record(calc, "TARGET:APPT:HV:Mean")
{
    field(DESC, "APPT High Voltage, Mean of all channels")
    field(EGU, "V")
#	field(LOW,  -1.0)
#   field(HIGH,  1.0)
#   field(LOLO, -2.0)
#	field(HIHI,  2.0)

    field (CALC, "A")
}

