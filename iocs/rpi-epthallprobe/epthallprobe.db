record (ai, "$(DEV):MagneticField")
{
	field (DTYP, "stream")
	field (INP, "@$(PROTO) read_field $(DEV)")
	field (SCAN, "1 second")
	field (DESC, "Magnetic Fiel in EPT")
	field (EGU, "T")
#	field (LOPR, 0)
#	field (HOPR, 2)
	field (LOW,  1.330)
	field (HIGH, 1.469)
	field (LSV, MINOR)
	field (HSV, MINOR)
	field (HHSV, NO_ALARM)
	field (LLSV, NO_ALARM)
	field (PREC, 3)
}

record (ai, "$(DEV):HallProbe:Temp")
{
	field (DTYP, "stream")
	field (INP, "@$(PROTO) read_temp $(DEV)")
	field (SCAN, "5 second")
	field (DESC, "EPT Hallprobe temperature")
	field (EGU, "T")
	field (LOPR, 0)
	field (HOPR, 50)
	field (PREC, 2)
}

record (calc, "$(DEV):MagneticFieldSet")
{
	field (DESC, "EPT Magnetic Field Target Value")
	field (CALC, "A")
	field (EGU, "T")
	field (PREC, 3)
	field (VAL, 1.399)
}

