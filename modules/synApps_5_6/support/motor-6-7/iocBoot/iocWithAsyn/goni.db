#write zero to $(P)RADIATOR_INDEX as soon as X,Y or ROLL motion detected.
record(calcout, "$(P)CHANGE_XYROLL"){
   field(SCAN,".5 second")
   field(OUT, "$(P)RADIATOR_INDEX")
   field(INPA,"$(P)X.MOVN")
   field(INPB,"$(P)Y.MOVN")
   field(INPC,"$(P)ROLL.MOVN")
   field(OOPT,"When Zero")
   field(CALC,"((A+B+C)>0)?0:1")
}


